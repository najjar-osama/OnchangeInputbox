    <properties>
        <property key="attr" type="attribute" required="true">
            <caption>Attribute</caption>
            <category>Data source</category>
            <description>The attribute to display.</description> 
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="onleavemf" type="microflow" required="false">
            <caption>On leave microflow</caption>
            <category>Data source</category>
            <description>Optional: The microflow to execute on leave.</description> 
            <returnType type="Void"/>
        </property>
		<property key="onchangemf" type="microflow" required="false">
            <caption>On change microflow</caption>
            <category>Data source</category>
            <description>Optional: The microflow to execute on each change.</description> 
            <returnType type="Void"/>
        </property>
        <property key="delay" type="integer" required="true" defaultValue="0">
            <caption>Delay</caption>
            <category>Behavior</category>
            <description>Delay before first on change microflow is triggered in milliseconds.</description> 
        </property>
		<property key="chartreshold" type="integer" required="true" defaultValue="0">
            <caption>Character treshold</caption>
            <category>Behavior</category>
            <description>Minimum character treshold before the on change microflow is triggered.</description> 
        </property>

        <property key="placeholder" type="string" required="false">
            <caption>Placeholder text</caption>
            <category>General</category>
            <description></description> 
        </property>
        <property key="maxLength" type="integer" required="true" defaultValue="0">
            <caption>Maximum length</caption>
            <category>General</category>
            <description></description> 
        </property>
        <property key="rows" type="integer" required="true" defaultValue="0">
            <caption>Number of lines</caption>
            <category>General</category>
            <description></description> 
        </property>
        <property key="textTooLongMsg" type="string" required="false">
            <caption>Text too long message</caption>
            <category>General</category>
            <description></description> 
        </property>
        <property key="counterMsg" type="integer" required="true" defaultValue="0">
            <caption>Counter message</caption>
            <category>General</category>
            <description></description> 
        </property>
    </properties>
